general {
    immediate_render = false
    screencopy_mode=1
}

background {
    monitor =
    path = screenshot
    color = rgba(170, 39, 245, 0.8)
    # all these options are taken from hyprland, see https://wiki.hyprland.org/Configuring/Variables/#blur for explanations
    blur_size = 4
    blur_passes = 3 # 0 disables blurring
    noise = 0.0117
    contrast = 1.3000 # Vibrant!!!
    brightness = 0.8000
    vibrancy = 0.2100
    vibrancy_darkness = 0.0
    #reload_cmd = swww query | awk -F'image: ' '{print $2}'
}


image{
    path = /home/amaan/Pictures/blank.jpeg
    monitor =
    size = 250
    rounding = 10
    border_size = 3
    border_color = rgba({{color4 | rgb}},1.0)
    position =40,40
    valign = bottom
    halign = left
    reload_time = 1
    reload_cmd = /home/amaan/Scripts/music_metadata.sh cover
}

