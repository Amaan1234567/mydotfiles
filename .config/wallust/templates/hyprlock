    halign = center
    valign = center
}

input-field {
    monitor =
    size = 250, 50
    outline_thickness = 2

    dots_size = 0.26 # Scale of input-field height, 0.2 - 0.8
    dots_spacing = 0.64 # Scale of dots' absolute size, 0.0 - 1.0
    dots_center = true
    

    rounding = 22
    outer_color = rgb({{color3 | rgb}})
    inner_color = rgb({{background | rgb}})
    font_color = rgb({{color3 | rgb}})
    fade_on_empty = true
    placeholder_text = Password... # Text rendered in the input box when it's empty.
    font_family = JetBrainsMono Nerd Font Mono ExtraBold
    position = 0, 120
    halign = center
    valign = bottom
}

